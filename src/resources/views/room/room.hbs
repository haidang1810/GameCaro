<nav>{{> page/header}}</nav>
<div class="container-fluid mb-3 main-room-game">
    <div class="room__game-header">
        <h2 class="room-title" roomIndex="{{ data.id }}">Phòng {{ data.id }}</h2>
        <i class="fa fa-gear" data-toggle="modal" data-target="#settingModal"></i>
    </div>
    <div class="main-game">
        <div class="info-player-one">
            <div class="player-name"></div>
            <div class="total-played"></div>
            <div class="room-wined"></div>
            <button class="btn btn-start-game">Bắt đầu</button>
            <div class="circle-progress">
                <div class="circular-progress circular-progress-host">
                    <div class="value-container value-container-host"></div>
                </div>
            </div>
        </div>
        <div id="game-board">

        </div>
        <div class="info-player-two">
            <div class="player-name"></div>
            <div class="total-played"></div>
            <div class="room-wined"></div>
            <button class="btn btn-ready">Sẵn sàng</button>
            <div class="circle-progress">
                <div class="circular-progress circular-progress-player">
                    <div class="value-container value-container-player"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="info__setting">
        <label for="">Cài đặt phòng</label>
        <ul>
            <li>Mật khẩu: <span class="info__setting-pass"></span></li>
            <li>Người đi trước: <span class="info__setting-first">chủ phòng</span></li>
            <li>Thời gian mỗi lượt: <span class="info__setting-time">60s</span></li>
        </ul>
    </div>
    <div class="chat-room hide-chat">
        <div class="chat__room-content">
            <div class="chat__room-message">

            </div>
            <div class="chat__boxed-send">
                <form class="form-send-message-room">
                    <input type="text" placeholder="Nhập chat ở đây" id="input-chat-room-msg" class="input-message" autocomplete="off">
                    <button type="submit" class="chat__room-btn">Gửi</button>
                </form>
            </div>
        </div>
        <button class="toggleChat">Chat</button>
    </div>
</div>
<div class="modal fade" id="settingModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cài đặt phòng</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form>
                <div class="modal-body">
                    <div class="mb-3 form-group">
                        <label for="name-add-menu" class="form-label">Mật khẩu phòng</label>
                        <input type="text" class="form-control"  id="input-pass-setting" autocomplete="off">
                    </div>
                    <div class="mb-3 form-group">
                        <label for="">Người đi trước</label>
                        <select class="form-control" id="playerFirst">
                            <option value="host">Chủ phòng</option>
                            <option value="player">Người chơi</option>
                        </select>
                    </div>
                    <div class="mb-3 form-group">
                        <label for="">Thời gian mỗi lượt</label>
                        <input type="number" class="form-control" id="timePerTurn" value="60" min="10" max="360" step="1">
                    </div>
                    <div class="mb-3">
                        <label for="">Nước cờ</label>
                        <div class="form-check form-check">
                            <input class="form-check-input" type="radio" name="char" id="inlineRadio1" value="X" checked>
                            <label class="form-check-label" for="inlineRadio1">X</label>
                        </div>
                        <div class="form-check form-check">
                            <input class="form-check-input" type="radio" name="char" id="inlineRadio2" value="O">
                            <label class="form-check-label" for="inlineRadio2">O</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Huỷ</button>
                    <button type="button" id="submit-setting-rooms" data-dismiss="modal" class="btn btn-primary" href="">Lưu</b>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/js/room.js"></script>