<nav>{{> page/header}}</nav>
<div class="container-fluid">
    <div class="row mt-3 row-chat">
        <div class="col-xl-9 col-md-12 ">
            <button class="btn py-2 px-3 button-create-room" data-toggle="modal" data-target="#createRoomModal">Tạo phòng</button>
            <div class="mt-3 list-room">
                <div class="room row">
                    
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-12 chat__boxed">
            <h3 class="chat__boxed-header">Kênh chat</h3>
            <div class="chat__boxed-content">
                <div class="chat__boxed-message">
                    
                </div>
                <div class="chat__boxed-send">
                    <form class="form-send-message">
                        <input type="text" placeholder="Nhập chat ở đây" class="input-message">
                        <button type="submit">Gửi</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="createRoomModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tạo phòng</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form>
                <div class="modal-body">
                    <div class="mb-3 form-group">
                        <label for="name-add-menu" class="form-label">Mật khẩu phòng</label>
                        <input type="text" class="form-control"  id="input-pass-create" autocomplete="off">
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Huỷ</button>
                    <button type="button" id="submit-create-rooms" class="btn btn-primary" href="">Xác nhận</b>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="joinRoomModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tạo phòng</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form>
                <div class="modal-body">
                    <div class="mb-3 form-group">
                        <label for="name-add-menu" class="form-label">Mật khẩu phòng</label>
                        <input type="text" class="form-control"  id="input-pass-join" autocomplete="off">
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Huỷ</button>
                    <button type="button" id="submit-join-rooms" class="btn btn-primary" href="">Xác nhận</b>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/js/listRoom.js"></script>