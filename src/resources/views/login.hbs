<div class="container-fluid" id="login-page">
    <div class="row justify-content-center">
        <div class="col-xl-4 col-md-12 row-container p-4 px-5">
            <form method="POST" class="form-login">
                <h1 class="form__title">Đăng nhập</h1>
                <div class="form-group">
                    <label for="email" >Email</label>
                    <div class="form__input">
                        <input type="text" id="email" rules='required|email' name="email" class="form-control mb-2 shadow-none form__input-text" placeholder="Nhập email...">
                        <i class="fa fa-user form__input-icon"></i>
                        <div class="form__input-line"></div>
                    </div>
                    <span class="form-message "></span>
                </div>
                <div class="form-group">
                    <label for="password">Mật khẩu</label>
                    <div class="form__input">
                        <input type="password" id="password" rules='required|min:4|max:20' name="password" class="form-control mb-2 shadow-none form__input-text " placeholder="Nhập mật khẩu..." autocomplete="off">
                        <i class="fa fa-lock form__input-icon"></i>
                        <div class="form__input-line"></div>
                    </div>
                    <span class="form-message "></span>
                </div>
                <div class="form-check mb-3 col-md-5 col-md-12">
                    <label class="form-check-label form__input-lable">
                        <input type="checkbox" class="form-check-input form__input-check"  name="remember" value="isRemember">
                        Ghi nhớ mật khẩu
                    </label>
                    <a href="#" class="form__input-lable">Quên mật khẩu?</a>
                </div>
                <div class="button">
                    <button id="submitLogin" class="wpcf7-form-control wpcf7-submit">Đăng nhập</button>
                </div>
            </form>
            <div class="d-flex justify-content-center mt-2 form__login-text">
                <p>Đăng nhập bằng</p>
            </div>
            <div class="d-flex justify-content-center">
                <a href="#"><i class="fa fa-facebook social__login social__login-facebook"></i></a>
                <a href="#"><i class="fa fa-google social__login social__login-google"></i></a>
            </div>
            <div class="form__footer form__login-text">
                <p>Chưa có tài khoản?</p>
                <a href="/register" class="form__input-lable"> Đăng ký</a>
            </div>
        </div>
    </div>
</div>
<script src="/js/login.js"></script>
